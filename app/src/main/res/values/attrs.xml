<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CardViewMenuItem">
        <attr name="labelText" format="string|reference" localization="suggested" />
        <attr name="menuIcon" format="reference" />
        <attr name="CardViewMenuItemStatus" />
        <attr name="targetAction" format="reference" />
    </declare-styleable>

    <attr name="CardViewMenuItemStatus" format="enum">
        <enum name="Enabled" value="0" />
        <enum name="Disabled" value="1" />
    </attr>

    <declare-styleable name="LocationSelector">
        <attr name="title" format="string|reference" />
        <attr name="prompt" format="string|reference" />
        <attr name="locationType" format="enum">
            <enum name="district" value="1" />
            <enum name="traditional_authority" value="2" />
            <enum name="village_cluster" value="3" />
            <enum name="zone" value="4" />
            <enum name="village" value="5" />
        </attr>
    </declare-styleable>

    <declare-styleable name="StandardRecyclerView">
        <attr name="empty_label" format="string|reference" />
        <attr name="allow_filter" format="boolean|reference" />
        <attr name="filter_hint" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="DualLineTextView">
        <attr name="line1" format="string|reference" />
        <attr name="line2" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="ExpandablePanel">
        <attr name="panel_title" format="string|reference" />
        <attr name="content_background_color" format="color|reference" />
        <attr name="panel_summary" format="string|reference" />
        <attr name="layout" format="reference" />
        <attr name="view_mode" format="enum">
            <enum name="collapse" value="0" />
            <enum name="expand" value="1" />
        </attr>
    </declare-styleable>
</resources>